# Database Configuration
MONGO_URI=mongodb://localhost:27017/gshelf
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/gshelf

# Server Configuration
PORT=5001
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here

# JWT Configuration (if using JWT instead of sessions)
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Redis Configuration (for session storage in production)
REDIS_URL=redis://localhost:6379

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
